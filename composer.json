{
    "name": "star/game-engine",
    "Description": "PHP engine to create games.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Yannick Voyer"
        }
    ],
    "autoload": {
        "psr-4": {
			"Star\\GameEngine\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\GameEngine\\": ["tests"]
        }
    },
    "require": {
        "php": "^7.3",
        "ext-bcmath": "*",
        "ext-json": "*",
        "behat/transliterator": "^1.2",
        "doctrine/inflector": "^1.3",
        "moneyphp/money": "^3.1",
        "psr/log": "^1.1",
        "ramsey/uuid": "^3.8",
        "star/domain-event": "^2.1",
        "star/identity": "^1.2",
        "star/state-machine": "^2.0",
        "symfony/event-dispatcher": "^5.0",
        "symfony/messenger": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    }
}
