{
    "name": "star/game-engine",
    "description": "PHP engine to create games.",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Yannick Voyer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Star\\GameEngine\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\GameEngine\\": ["tests"]
        }
    },
    "require": {
        "php": "~7.3|^8.0",
        "ext-bcmath": "*",
        "ext-json": "*",
        "behat/transliterator": "^1.2",
        "doctrine/inflector": "^1.3",
        "moneyphp/money": "^3.1",
        "psr/log": "^1.1",
        "ramsey/uuid": "^3.8",
        "star/domain-event": "^2.1",
        "star/identity": "^1.2",
        "star/state-machine": "^2.0",
        "symfony/event-dispatcher": "^5.0",
        "twig/twig": "^3.1"
    },
    "require-dev": {
        "infection/infection": "^0.18",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.52",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/phpstan-strict-rules": "^0.12.5",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    }
}
